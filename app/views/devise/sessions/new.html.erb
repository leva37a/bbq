<h2>Вход на сайт</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
    <div class='col-md-6'>
      <div class="form-group mb-3">
        <%= f.email_field :email,autofocus: true, autocomplete: "email",placeholder:"Email"
         %>
        <i class="bi bi-envelope-at-fill" style="font-size: 1.5rem;"></i>
      </div>

      <div class="form-group mb-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Пароль" %>
        <i class="bi bi-lock-fill" style="font-size: 1.5rem;"></i>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Войти", class: 'btn btn-info mb-3'  %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
