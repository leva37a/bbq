<%= form_with model: user, html: { multipart: true } do |form| %>
  <%= render partial: "partials/form_errors", locals: {model: user} %>
  
  <div class="form-floating mb-3">
    <%= form.text_field :name, autofocus: true, autocomplete: "name",
                     placeholder: t('views.devise.name'), id: "floatingInput", class: "form-control" %>
    <%= form.label :name, for: "floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= form.email_field :email, autofocus: true, autocomplete: "email",
                      placeholder: t('views.devise.email'), id: "floatingInput", class: "form-control" %>
    <%= form.label :email, for: "floatingInput" %>
  </div>

  <div class="actions mb-3">
    <%= form.submit t('views.users.save'), class: 'btn btn-info' %>
  </div>

  <div class="actions mb-3">
    <%= link_to t('views.users.back'), :back %>
  </div>
<% end %>
