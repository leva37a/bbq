<div class="border bg-light p-2 mb-2">
  <p><%= comment.body %></p>
  <p class="d-inline">
    <span>
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </span>
    <em><%= l comment.created_at, format: :short %></em>
  </p>
  <p class="d-inline">
    <% if current_user_can_edit?(comment) %>
       <%= link_to '<i class="btn bi bi-trash"></i>'.html_safe, 
         event_comment_path(comment.event, comment), data: {turbo_method: :delete, turbo_confirm: t('views.comments.destroy_confirm')} %>
    <% end %>
  </p>
</div>